@using Car_Rental_System.ViewModel
@model CarVM
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-1">
            <h2 class="display-4 text-center"> New Car Add</h2>
            <hr />
        </div>
        <div class="col-md-10 offset-1">

            @*@if (ViewBag.Success)
            {
