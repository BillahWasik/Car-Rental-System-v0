@model Car
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="mt-3 p-3 shadow rounded">
                <div class="d-flex justify-content-between mb-3 p-3">
                    <h3 class="text-info">Car List</h3>
                    <a asp-controller="Car" asp-action="Create" class="btn btn-outline-primary rounded">Add New Car</a>
                </div>
                <div class="p-3">
                    <table class="table table-responsive table-bordered text-info text-center">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Brand</th>
                                <th>Model</th>
                                <th>Seating Capacity</th>
                                <th>Engine</th>
                                <th>Fuel Type</th>
                                <th>Passing Year</th>
                                <th>Car Number</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.Id</td>
                                <td>@Model.Brand</td>
                                <td>@Model.Model</td>
                                <td>@Model.Seating_Capacity</td>
                                <td>@Model.Engine</td>
                                <td>@Model.Fuel_Type</td>
                                <td>@Model.Passing_Year</td>
                                <td>@Model.Car_Number</td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>               
            </div>
        </div>
    </div>
</div>


