@using Car_Rental_System.CustomModels
@model DriverModel
@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-1">
            <h2 class="display-4 text-center"> Delete Driver</h2>
            <hr />
        </div>
        <div class="col-md-10 offset-1">

            @if (ViewBag.Success)
            {
                <div>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Sorry! </strong> You have deleted a driver.

                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            }

        <form method="post" enctype="multipart/form-data" asp-controller="driver" asp-action="delete">
            <input asp-for="Id" hidden />
            <input asp-for="ImagePath" hidden />

            <div class="form-group">
                <label asp-for="Driver_Name"></label>
                <input hidden asp-for="Driver_Name" class="form-control" />
                <span asp-validation-for="Driver_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age"></label>
                <input hidden asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>


            </div>
            <div class="form-group">
                <label asp-for="City"></label>
                <input hidden asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>


            </div>
            <div class="form-group">
                <label asp-for="District"></label>
                <input hidden asp-for="District" class="form-control" />
                <span asp-validation-for="District" class="text-danger"></span>


            </div>
            <div class="form-group">
                <label asp-for="Driving_Year"></label>
                <input hidden asp-for="Driving_Year" class="form-control" />
                <span asp-validation-for="Driving_Year" class="text-danger"></span>


            </div>
            <div class="form-group">
                <label asp-for="Mobile_Number"></label>
                <input hidden asp-for="Mobile_Number" class="form-control" />
                <span asp-validation-for="Mobile_Number" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="DriverFile" for="exampleFormControlFile1">Car Image</label>
                <input hidden asp-for="DriverFile" type="file" class="form-control-file" id="exampleFormControlFile1">
            </div>
            <div class="btn-group">
                <div class="form-group">
                    <input type="reset" value="Clear" class="btn btn-primary" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-info" />
                </div>
            </div>
        </form>
        </div>
    </div>
</div>



