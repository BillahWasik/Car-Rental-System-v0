@using Car_Rental_System.CustomModels
@model IEnumerable<RentModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="mt-3 p-3 shadow rounded">
                <div class="d-flex justify-content-between mb-3 p-3">
                    <h3 class="text-info">Rent List</h3>
                    <a asp-controller="Rent" asp-action="CreateBooking" class="btn btn-outline-primary rounded">Book Now</a>
                </div>
                <div class="p-3">
                    <table class="table table-bordered text-info text-center">
                        <thead>
                            <tr>
                                <th>Customer Name</th>
                                <th>Customer Phone</th>
                                <th>Rent Date</th>
                                <th>Return Date</th>
                                <th>Status</th>
                                <th>Driver</th>
                                <th>Car</th>
                                <th>Total Amount</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.CustomerName</td>
                                <td>@item.Customer_Phone</td>
                                <td>@item.Rent_Date</td>
                                <td>@item.Return_Date</td>
                                <td>@item.Status</td>
                                <td>@item.Driver_Name</td>
                                <td>@item.Car_Name</td>
                                <td>@item.TotalAmount</td>
                                <td>
            <a asp-route-id="@item.Id" asp-controller="Rent" asp-action="edit" class="btn btn-outline-primary rounded">Edit</a>
            <a asp-route-id="@item.Id" asp-controller="Rent" asp-action="delete" class="btn btn-outline-danger rounded">Delete</a>
        </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



